= render "side"
.main
  .main__group.clearfix
    %p.main__group--name グループ名
    %button.main__group--edit Edit
    %p.main__group--member MEMBER:
  .main__message
    %p.main__message--user 名前
    %p.main__message--date 日付
    %p.main__message--text メッセージ
  .main__footer
    %form.main__footer-form
      .main__footer-body
        %input.message{type: "text",name: "message",placeholder: "type a message"}
        %label.uploard-label{for: "upload-icon"}
          %i.fa.fa-image
        %input#upload-icon{type: "file", name: "image"}
      %input.submit{type: "submit", value: "send"}
